{
    "manifest_version": 3,
    "name": "Gmail to Claude",
    "version": "1.3",
    "permissions": [
      "activeTab",
      "scripting",
      "tabs",
      "storage"
    ],
    "host_permissions": [
      "https://mail.google.com/*",
      "https://claude.ai/*"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "action": {
      "default_title": "Send to Claude"
    },
    "options_page": "options.html",
    "content_scripts": [
      {
        "matches": ["https://mail.google.com/*"],
        "js": ["content.js"]
      },
      {
        "matches": ["https://claude.ai/*"],
        "js": ["claude-content.js"]
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "license": "MIT"
  }